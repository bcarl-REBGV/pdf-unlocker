<RootWidget>:
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
    Image:
        source: "locked-padlock.png"
        size_hint: 0.25, 0.25
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    Label:
        text: "Drop a PDF file here to remove its security settings."
        color: 0,0,0,1
        size_hint: 1, 0.05
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
